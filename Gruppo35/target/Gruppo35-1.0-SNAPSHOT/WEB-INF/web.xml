<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>Filter1</filter-name>
        <filter-class>web.esame.gruppo35.helperClasses.Filter1</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Filter1</filter-name>
        <url-pattern>/Homepage</url-pattern>
        <url-pattern>/WhoWeAre</url-pattern>
        <url-pattern>/Activities</url-pattern>
        <url-pattern>/ContactUs</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <listener>
        <listener-class>web.esame.gruppo35.helperClasses.ServletContextInitializer</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>Homepage</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ContactUs</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.ContactUsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateContactForm</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.ValidateContactFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailSent</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.EmailSentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateLogin</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.ValidateLoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ContactUs</servlet-name>
        <url-pattern>/ContactUs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateContactForm</servlet-name>
        <url-pattern>/ValidateContactForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailSent</servlet-name>
        <url-pattern>/EmailSent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateLogin</servlet-name>
        <url-pattern>/validateLogin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Activities</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.ActivitiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Activities</servlet-name>
        <url-pattern>/Activities</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WhoWeAre</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.WhoWeAreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WhoWeAre</servlet-name>
        <url-pattern>/WhoWeAre</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.HomePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/Homepage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PublicServlet</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.PublicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublicServlet</servlet-name>
        <url-pattern>/PublicServlet</url-pattern>
    </servlet-mapping>
</web-app>