        <servlet-class>web.esame.gruppo35.servlets.GetUserDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUserData</servlet-name>
        <url-pattern>/GetUserData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserActivitiesSubscription</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.UserActivitiesSubscriptionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserActivitiesSubscription</servlet-name>
        <url-pattern>/UserActivitiesSubscription</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SendDonation</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.SendDonationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendDonation</servlet-name>
        <url-pattern>/SendDonation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteAccount</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.DeleteAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/DeleteAccount</url-pattern>
    </servlet-mapping>
</web-app>