        <servlet-name>HomePage</servlet-name>
        <url-pattern>/Homepage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Member</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.MemberServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Member</servlet-name>
        <url-pattern>/Member</url-pattern>
    </servlet-mapping>

    <servlet>
