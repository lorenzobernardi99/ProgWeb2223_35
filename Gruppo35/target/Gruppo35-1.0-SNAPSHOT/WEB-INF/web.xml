<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>CookiesFilter</filter-name>
        <filter-class>web.esame.gruppo35.helperClasses.CookiesFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>web.esame.gruppo35.helperClasses.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>MemberFilter</filter-name>
        <filter-class>web.esame.gruppo35.helperClasses.MemberFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CookiesFilter</filter-name>
        <url-pattern>/Homepage</url-pattern>
        <url-pattern>/WhoWeAre</url-pattern>
        <url-pattern>/Activities</url-pattern>
        <url-pattern>/ContactUs</url-pattern>
        <url-pattern>/Login</url-pattern>
        <url-pattern>/ValidateLogin</url-pattern>
        <url-pattern>/SignIn</url-pattern>
        <url-pattern>/Admin</url-pattern>
        <url-pattern>/GetUsers</url-pattern>
        <url-pattern>/GetViews</url-pattern>
        <url-pattern>/ResetViews</url-pattern>
        <url-pattern>/GetDonations</url-pattern>
        <url-pattern>/Member</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/Admin</url-pattern>
        <url-pattern>/GetUsers</url-pattern>
        <url-pattern>/GetViews</url-pattern>
        <url-pattern>/ResetViews</url-pattern>
        <url-pattern>/GetDonations</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MemberFilter</filter-name>
        <url-pattern>/Member</url-pattern>
        <url-pattern>/GetUserData</url-pattern>
        <url-pattern>/UserActivitiesSubscription</url-pattern>
        <url-pattern>/SendDonation</url-pattern>
        <url-pattern>/DeleteAccount</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>

    <listener>
        <listener-class>web.esame.gruppo35.helperClasses.ServletContextInitializer</listener-class>
    </listener>

    <listener>
        <listener-class>web.esame.gruppo35.helperClasses.SessionListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>Homepage</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ContactUs</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.ContactUsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateContactForm</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.ValidateContactFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateLogin</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.ValidateLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignInValidation</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.SignInValidationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUsers</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.GetUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetViews</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.GetViewsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetViews</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.ResetViewsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDonations</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.GetDonationsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ContactUs</servlet-name>
        <url-pattern>/ContactUs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateContactForm</servlet-name>
        <url-pattern>/ValidateContactForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateLogin</servlet-name>
        <url-pattern>/ValidateLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignInValidation</servlet-name>
        <url-pattern>/SignInValidation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUsers</servlet-name>
        <url-pattern>/GetUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetViews</servlet-name>
        <url-pattern>/GetViews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetViews</servlet-name>
        <url-pattern>/ResetViews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDonations</servlet-name>
        <url-pattern>/GetDonations</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Activities</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.ActivitiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Activities</servlet-name>
        <url-pattern>/Activities</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WhoWeAre</servlet-name>
        <servlet-class>web.esame.gruppo35.servlets.WhoWeAreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WhoWeAre</servlet-name>
        <url-pattern>/WhoWeAre</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomePage</servlet-name>
